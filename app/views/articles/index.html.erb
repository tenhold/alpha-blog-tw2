<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>

<% if false %>
    <li><%= link_to 'Destroy', article_path(article), data: {
            turbo_method: :delete,
            turbo_confirm: 'Are you sure?'
          } %></li>
    </li>
  <% end %>
<% end %>

  <%= link_to 'New Article', new_article_path %>
</ul>
